call pathogen#runtime_append_all_bundles()
call pathogen#helptags()

filetype indent plugin on

syntax on

set nocompatible
set number

set hidden

set wildmenu

set showcmd


set showmode

set laststatus=2

set incsearch
set hlsearch
set smartcase
set ignorecase

set backspace=indent,eol,start

set autoindent

set nostartofline

set ruler

set shiftwidth=2
set softtabstop=2
set expandtab

set bg=dark
set backspace=2
